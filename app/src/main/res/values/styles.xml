<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Cyanea.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.InfoLine">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.WallpaperBackground" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@color/wallpaperActivityBackgroundColor</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <!-- I would usually write this as a hardcoded value to the windowBackground, but it wants a reference for some reason, so here is a workaround -->
    <color name="wallpaperActivityBackgroundColor">#1000</color>

</resources>
