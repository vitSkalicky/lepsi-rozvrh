<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Rozvrh">
        <attr name="backgroundChng" />
        <attr name="backgroundA" />
        <attr name="backgroundH" />
        <attr name="backgroundEmpty" />
        <attr name="backgroundHeader"/>

        <attr name="dividerColor"/>
        <attr name="dividerWidth"/>
        <attr name="dividerHighlightColor"/>
        <attr name="dividerHighlightWidth"/>

        <!-- Primary text is a lesson or day acronym or caption number (MA, Bio, Mon, 3) -->
        <attr name="textPrimaryColor"/>
        <!-- room label (no. 20, F) -->
        <attr name="textRoomColor"/>
        <!-- secondary text is a date, teacher, or begin time (14. 10., 8:00) -->
        <attr name="textSecondaryColor"/>
        <attr name="textPrimarySize"/>
        <attr name="textSecondarySize" />

        <attr name="paddingLeft"/>
        <attr name="paddingTop" />
        <attr name="paddingRight" />
        <attr name="paddingBottom" />
        <attr name="textPadding"/>

    </declare-styleable>

    <attr name="backgroundChng" format="color" />
    <attr name="backgroundA" format="color" />
    <attr name="backgroundH" format="color" />
    <attr name="backgroundEmpty" format="color" />
    <attr name="backgroundHeader" format="color"/>

    <attr name="dividerColor" format="color"/>
    <attr name="dividerWidth" format="dimension" />
    <attr name="dividerHighlightColor" format="color"/>
    <attr name="dividerHighlightWidth" format="dimension" />

    <!-- Primary text is a lesson or day acronym or caption number (MA, Bio, Mon, 3) -->
    <attr name="textPrimaryColor" format="color"/>
    <!-- room label (no. 20, F) -->
    <attr name="textRoomColor" format="color"/>
    <!-- secondary text is a date, teacher, or begin time (14. 10., 8:00) -->
    <attr name="textSecondaryColor" format="color"/>
    <attr name="textPrimarySize"  format="dimension"/>
    <attr name="textSecondarySize"  format="dimension"/>

    <attr name="paddingLeft" format="dimension"/>
    <attr name="paddingTop" format="dimension"/>
    <attr name="paddingRight" format="dimension"/>
    <attr name="paddingBottom" format="dimension"/>
    <attr name="textPadding" format="dimension"/>
</resources>
